{
	"name": "@jayson991/react-modal",
	"version": "2.0.0",
	"description": "A modern, responsive, and accessible React modal component with TypeScript, Sass, and full mobile support",
	"license": "MIT",
	"author": "jayson991 <jaysonwu991@outlook.com>",
	"homepage": "https://github.com/jaysonwu991/react-modal",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jaysonwu991/react-modal.git"
	},
	"bugs": {
		"url": "https://github.com/jaysonwu991/react-modal/issues"
	},
	"keywords": [
		"react",
		"modal",
		"dialog",
		"typescript",
		"sass",
		"responsive",
		"accessible",
		"mobile",
		"ui-component"
	],
	"main": "lib/index.cjs",
	"module": "lib/index.js",
	"types": "lib/index.d.ts",
	"style": "lib/react-modal.css",
	"exports": {
		".": {
			"types": "./lib/index.d.ts",
			"import": "./lib/index.js",
			"require": "./lib/index.cjs"
		},
		"./styles": "./lib/react-modal.css"
	},
	"files": [
		"lib",
		"README.md"
	],
	"scripts": {
		"build": "vite build",
		"type-check": "tsc --noEmit",
		"lint": "oxlint src",
		"format": "oxlint --fix src",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"peerDependencies": {
		"react": ">=18.0.0",
		"react-dom": ">=18.0.0"
	},
	"devDependencies": {
		"@storybook/addon-links": "^10.1.8",
		"@storybook/react": "^10.1.8",
		"@storybook/react-vite": "^10.1.8",
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^25.0.2",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@vitejs/plugin-react": "^5.1.2",
		"@vitest/coverage-v8": "^4.0.15",
		"@vitest/ui": "^4.0.15",
		"jsdom": "^27.3.0",
		"oxlint": "^1.32.0",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"sass": "^1.96.0",
		"storybook": "^10.1.8",
		"typescript": "^5.9.3",
		"vite": "^7.2.7",
		"vite-plugin-dts": "^4.5.4",
		"vitest": "^4.0.15"
	},
	"publishConfig": {
		"access": "public"
	}
}
